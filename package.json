{
  "name": "horizonbienetre.fr",
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/register": "^7.28.3",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "react-email": "5.1.0",
    "terser": "^5.44.1",
    "tsx": "^4.21.0"
  },
  "scripts": {
    "dev": "set NODE_ENV=development&& concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\"",
    "build:emails": "tsx ./emails/preview-email.jsx",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build": "npm run build:emails && npm run build:frontend && npm run build:backend && shx cp backend/.env.production build/.env",
    "clean": "shx rm -rf build",
    "prod": "set NODE_ENV=prodlocale && node ./backend/src/server.js",
    "prod:build": "set NODE_ENV=production && set ISPRODLOCAL=true && node ./build/backend/server.js",
    "start": "set ISPRODLOCAL=true && node ./build/backend/server.js"
  },
  "dependencies": {
    "@react-email/components": "1.0.2",
    "@react-email/render": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "nodemailer": "^7.0.11",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "shx": "^0.4.0"
  }
}
